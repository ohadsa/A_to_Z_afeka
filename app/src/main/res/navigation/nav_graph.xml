<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">



    <action
        android:id="@+id/action_to_gameFragment"
        app:popUpTo="@id/welcomeFragment"
        app:popUpToInclusive="true"
        app:destination="@id/gameFragment" />

    <action
        android:id="@+id/action_to_welcomeFragment"
        app:destination="@id/welcomeFragment" />

    <action
        android:id="@+id/action_to_blank"
        app:destination="@id/blankFragment" />

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.ohadsa.a_to_z.fragments.GameFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_game" />
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.ohadsa.a_to_z.fragments.WelcomeFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_welcome" />
    <fragment
        android:id="@+id/blankFragment"
        android:name="com.ohadsa.a_to_z.fragments.BlankFragment"
        android:label="fragment_blank"
        tools:layout="@layout/fragment_blank" />


</navigation>